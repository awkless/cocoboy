# General settings...
PROJECT_NAME     = @CMAKE_PROJECT_NAME@
PROJECT_NUMBER   = @CMAKE_PROJECT_VERSION@
PROJECT_BRIEF    = \"@CMAKE_PROJECT_DESCRIPTION@\"
OUTPUT_DIRECTORY = @CMAKE_SOURCE_DIR@/docs

EXTRACT_ALL = YES
EXTRACT_PRIVATE = YES
EXTRACT_STATIC = YES
RECURSIVE = YES

INPUT = @CMAKE_SOURCE_DIR@/docs/index.md \
        @CMAKE_SOURCE_DIR@/src       \
        @CMAKE_SOURCE_DIR@/tests

USE_MDFILE_AS_MAINPAGE = @CMAKE_SOURCE_DIR@/docs/index.md

# HTML settings...
GENERATE_HTML = YES
DISABLE_INDEX = NO
GENERATE_TREEVIEW = YES
FULL_SIDEBAR = YES
HTML_COLORSTYLE = DARK
HTML_OUTPUT = doxygen
SOURCE_BROWSER = NO
VERBATIM_HEADERS = NO
REFERENCES_LINK_SOURCE = NO

# Latex settings...
GENERATE_LATEX = NO
